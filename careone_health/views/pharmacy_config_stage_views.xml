<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pharmacy_config_stage_tree" model="ir.ui.view">
        <field name="name">pharmacy.config.stage.tree</field>
        <field name="model">pharmacy.config.stage</field>
        <field name="arch" type="xml">
            <tree string="Pharmacy Stages">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="is_verification_stage"/>
                <field name="is_dispensing_stage"/>
                <field name="is_issued_stage"/>
                <field name="is_finance_stage"/>
                <field name="require_pharmacist_approval"/>
            </tree>
        </field>
    </record>

    <record id="view_pharmacy_config_stage_form" model="ir.ui.view">
        <field name="name">pharmacy.config.stage.form</field>
        <field name="model">pharmacy.config.stage</field>
        <field name="arch" type="xml">
            <form string="Pharmacy Stage">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="fold"/>
                        </group>
                        <group>
                            <field name="is_verification_stage"/>
                            <field name="is_dispensing_stage"/>
                            <field name="is_issued_stage"/>
                            <field name="is_finance_stage"/>
                            <field name="require_pharmacist_approval"/>
                            <field name="auto_send_notification"/>
                        </group>
                    </group>
                    <group>
                        <field name="branch_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pharmacy_config_stage" model="ir.actions.act_window">
        <field name="name">Pharmacy Stages</field>
        <field name="res_model">pharmacy.config.stage</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_pharmacy_config_stage"
              name="Stages"
              parent="menu_pharmacy_config"
              action="action_pharmacy_config_stage"
              sequence="10"/>
</odoo>




 