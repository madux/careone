<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_api_token_tree" model="ir.ui.view">
        <field name="name">api.token.tree</field>
        <field name="model">api.token</field>
        <field name="arch" type="xml">
            <tree string="API Tokens" decoration-muted="active==False" decoration-danger="is_expired==True">
                <field name="name"/>
                <field name="user_id"/>
                <field name="scopes"/>
                <field name="active"/>
                <field name="is_expired"/>
                <field name="expiry_date"/>
                <field name="last_used"/>
                <field name="usage_count"/>
            </tree>
        </field>
    </record>

    <record id="view_api_token_form" model="ir.ui.view">
        <field name="name">api.token.form</field>
        <field name="model">api.token</field>
        <field name="arch" type="xml">
            <form string="API Token">
                <header>
                    <button name="action_regenerate_token" string="Regenerate Token" type="object" class="oe_highlight" attrs="{'invisible': [('active', '=', False)]}"/>
                    <button name="action_deactivate" string="Deactivate" type="object" attrs="{'invisible': [('active', '=', False)]}"/>
                    <field name="active" widget="boolean_button" options='{"terminology": "active"}'/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_api_tokens" icon="fa-key">
                            <field string="Usage" name="usage_count" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Expired" bg_color="bg-danger" attrs="{'invisible': [('is_expired', '=', False)]}"/>
                    <widget name="web_ribbon" title="Inactive" bg_color="bg-secondary" attrs="{'invisible': [('active', '=', True)]}"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id" options="{'no_create': True}"/>
                            <field name="scopes"/>
                        </group>
                        <group>
                            <field name="expiry_date"/>
                            <field name="is_expired"/>
                            <field name="last_used" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="ip_whitelist" placeholder="192.168.1.1,10.0.0.1 (comma-separated)"/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Notes about this token..."/>
                    </group>
                    <div class="alert alert-warning" role="alert" style="margin-top: 20px;">
                        <strong>Security Notice:</strong> The token value is only shown once after creation. 
                        Please save it securely. If you lose it, you'll need to regenerate a new token.
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_api_token_search" model="ir.ui.view">
        <field name="name">api.token.search</field>
        <field name="model">api.token</field>
        <field name="arch" type="xml">
            <search string="API Tokens">
                <field name="name"/>
                <field name="user_id"/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active','=',False)]"/>
                <filter string="Expired" name="expired" domain="[('is_expired','=',True)]"/>
                <separator/>
                <filter string="My Tokens" name="my_tokens" domain="[('user_id','=',uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="User" name="user" context="{'group_by':'user_id'}"/>
                    <filter string="Scope" name="scope" context="{'group_by':'scopes'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_api_token" model="ir.actions.act_window">
        <field name="name">API Tokens</field>
        <field name="res_model">api.token</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1, 'search_default_my_tokens': 1}</field>
    </record>

    <menuitem id="menu_api_token"
              name="API Tokens"
              parent="base.menu_administration"
              action="action_api_token"
              sequence="100"/>

    <!-- Add to user form -->
    <record id="view_users_form_inherit_api_token" model="ir.ui.view">
        <field name="name">res.users.form.inherit.api.token</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_api_tokens" icon="fa-key">
                    <field string="API Tokens" name="api_token_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>

<!-- data/ir_cron_data.xml -->
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_cleanup_expired_tokens" model="ir.cron">
            <field name="name">Cleanup Expired API Tokens</field>
            <field name="model_id" ref="model_api_token"/>
            <field name="state">code</field>
            <field name="code">model.cleanup_expired_tokens()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>